<% include ../partials/header %>
<div class="row justify-content-center mt-4">
    <div class="col-md-12 text-center">
         <h1>Add a new Restaurant</h1>    
    </div>
        <div class="col-lg-4 col-md-6 col-xs-12 mt-2">
            <form action="/restaurants" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Restaurant Name" name="name" required>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name="price" min="1" step="1" required>
                </div>
                
              <div class="form-group">
                <label for="imglabel">Image</label>
                <input type="file" class="form-control-file" id="imglabel" name="image" accept="image/*" required>
             </div>
                
                <div class="form-group">
                    <textarea rows="4" cols="70" class="form-control" placeholder="post description" name="description" required></textarea> 
                </div>
                  
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
        </form>
               <a href="/restaurants">Go BAck!!</a>
        </div>
    </div>
        
        <% include ../partials/footer %>
