<% include ../partials/header %>
        
         <div class="row justify-content-center mt-4">
             <div class="col-md-12 text-center">
               <h1>Edit <%=restaurants.name%></h1> 
              </div>
             <div class="col-lg-4 col-md-6 col-xs-12 mt-2">
        <form action="/restaurants/<%= restaurants._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <input class="form-control" type="text" value="<%=restaurants.name%>" name="name">
            </div>
             <div class="form-group">
                    <input class="form-control" type="number" value="<%=restaurants.price%>" name="price" min="1" step="1">
             </div>
           <div class="form-group">
                <label for="imglabel">Image</label>
                <input type="file" class="form-control-file" id="imglabel" name="image" accept="image/*">
             </div>
            
             <div class="form-group">
                 <textarea class="form-control" rows="4" cols="70" name="description"><%=restaurants.description%></textarea>
              </div>
              
             <div class="form-group">
                 <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
               
        </form>
        <a href="/restaurants">Go BAck!!</a>
    </div>
</div>
        
        <% include ../partials/footer %>
