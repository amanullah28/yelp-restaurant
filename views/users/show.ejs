<% include ../partials/header %>

<main>
  <input id="tab1" type="radio" name="tabs" checked>
  <label for="tab1">Your Restaurants</label>
  <input id="tab2" type="radio" name="tabs">
  <label for="tab2">Your Rating</label>
    
  <input id="tab3" type="radio" name="tabs">
  <label for="tab3">Info</label>
    
    
  <section id="content1">
 <div class="row text-center mb-4" id="card-grid">     
        <% restaurants.forEach(function(restaurants){%>
     <div class="col-lg-4 col-md-4 col-sm-6 mb-4">
         <div class="card" style="">
             <img class="card-img-top" src="<%= restaurants.image %>" alt="<%= restaurants.name %>" style="height: 12rem;">
                 <div class="card-body">
                      <h5 class="card-title"><%= restaurants.name %></h5>
                       <a href="/restaurants/<%= restaurants._id %>" class="btn btn-primary">More Info</a>
            </div>
        </div>
     </div>
   <% }); %>
</div>    


  </section>
    
  <section id="content2">
    <h2>
      Coming soon.... Stay tune...  :) <3.....
    </h2>
  </section>
    
  <section id="content3">
    <div class="row">
      <div class="col-md-6">
          <h3>
           <%=user.firstName+" "+user.lastName%>
          </h3>
          <h4>
            <%=user.email%>
          </h4>
        </div>
          <div class="col-md-6">
            <img id="info-show-pro-img" src="<%=user.profileImage%>">
          </div>
          </div>
  </section>

    
</main>
